<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_border_size_normal"
    android:paddingTop="@dimen/dimen_border_size_normal" >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_nick_name"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dimen_border_size_normal"
        android:gravity="center"
        android:text="@string/str_yes"
        android:textColor="@color/edt_grey"
        android:textSize="@dimen/dimen_font_size_normal" />

    <EditText
        android:id="@+id/edt_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_nick_name"
        android:gravity="left"
        android:textSize="@dimen/dimen_font_size_normal"
        android:visibility="visible" />

</RelativeLayout>