<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:paddingBottom="@dimen/activity_vertical_margin"
       android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/health_inquary_list_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_vertical_margin"
     />

    <TextView
        android:id="@+id/tv_health_inquary_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_border_size_xxsmall"
        android:layout_toRightOf="@+id/health_inquary_list_img"
        android:singleLine="true"
        android:textSize="@dimen/dimen_font_size_xnormal" />
    <TextView
        android:id="@+id/tv_health_inquary_list_detial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_health_inquary_list_title"
        android:layout_toRightOf="@+id/health_inquary_list_img"
        android:ellipsize="end"
        android:lines="3"
        android:textColor="@color/cart_grey"
        android:textSize="@dimen/dimen_font_size_small" />
</RelativeLayout>