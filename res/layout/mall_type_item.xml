<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.hengtiansoft.tijianba.widget.CircleImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/dimen_image_height_cart"
        android:layout_height="@dimen/dimen_image_height_cart"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_border_size_xsmall" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/textView_people"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_border_size_xsmall"
        android:singleLine="true" />

</LinearLayout>