<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_order_item"
        android:layout_width="@dimen/dimen_image_width"
        android:layout_height="@dimen/dimen_image_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/dimen_border_size_small" />

    <TextView
        android:id="@+id/tv_order_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
         android:text="1220.00"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/dimen_border_size_small"
        android:textColor="@color/org_detail_orange"
        android:textSize="@dimen/dimen_font_size_small" />

    <TextView
        android:id="@+id/tv_order_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_border_size_lsmall"
        android:layout_marginTop="@dimen/dimen_border_size_small"
        android:layout_toLeftOf="@id/tv_order_item_price"
        android:text="fffffffffffffffffffffffff"
        android:layout_toRightOf="@+id/img_order_item"
        android:textSize="@dimen/dimen_font_size_lsmall" />

    <TextView
        android:id="@+id/tv_order_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_item_name"
         android:text="fffffffffffffffffffffffff"
        android:layout_marginTop="@dimen/dimen_border_size_xxsmall"
        android:layout_toRightOf="@+id/img_order_item"
        android:textColor="@color/cart_grey"
        android:textSize="@dimen/dimen_font_size_small" />

    <TextView
        android:id="@+id/tv_order_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_order_item_price"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/dimen_border_size_xxsmall"
        android:textColor="@color/cart_grey"
        android:textSize="@dimen/dimen_font_size_small" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_order_item"
        android:layout_centerHorizontal="true"
        android:background="@drawable/line_order" />

</RelativeLayout>