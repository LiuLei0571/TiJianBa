<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="470dp"
    android:orientation="vertical" 
    android:background="@color/ranking_light_gray">

    <RelativeLayout
        android:id="@+id/gift_item_1"
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:background="#c1c1c1"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@null"
            android:src="@drawable/gift_one" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_alignParentBottom="true"
           android:layout_alignParentLeft="true"
           android:background="@color/gift_transparent" >

           <TextView
               android:id="@+id/tv_gift_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginLeft="@dimen/dimen_font_size_normal"
               android:text="智能血压计"
               android:textColor="@color/white" />
       </LinearLayout>

    </RelativeLayout>

    
    <RelativeLayout
        android:id="@+id/gift_item_2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/gift_item_1" 
        android:layout_marginTop="10dp">


        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:background="#c1c1c1"/>
        
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@null"
            android:src="@drawable/gift_two" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_alignParentBottom="true"
           android:layout_alignParentLeft="true"
           android:background="@color/gift_transparent" >

           <TextView
               android:id="@+id/tv_gift_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginLeft="@dimen/dimen_font_size_normal"
               android:text="智能血压计"
               android:textColor="@color/white" />
       </LinearLayout>

    </RelativeLayout>

    
    <RelativeLayout
        android:id="@+id/gift_item_3"
        android:layout_width="match_parent"
        android:layout_height="150dp" 
        android:layout_below="@id/gift_item_2"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:background="#c1c1c1"/>
        
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@null"
            android:src="@drawable/gift_three" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_alignParentBottom="true"
           android:layout_alignParentLeft="true"
           android:background="@color/gift_transparent" >

           <TextView
               android:id="@+id/tv_gift_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginLeft="@dimen/dimen_font_size_normal"
               android:text="智能血压计"
               android:textColor="@color/white" />
       </LinearLayout>

    </RelativeLayout>


</LinearLayout>