<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_report"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_orange" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_img"
        android:layout_marginLeft="@dimen/dimen_border_size_xsmall"
        android:background="@color/report_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_report_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_border_size_xnormal"
            android:layout_marginTop="@dimen/dimen_border_size_xnormal"
            android:layout_weight="1"
            android:text="报告名称"
            android:textColor="@color/font_dark_gray"
            android:textSize="@dimen/dimen_font_size_xnormal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_border_size_lsmall"
            android:layout_marginTop="@dimen/dimen_border_size_small"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_report_create_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_border_size_xnormal"
                android:text="@string/str_report_create_time"
                android:textColor="@color/font_dark_gray"
                android:textSize="@dimen/dimen_font_size_lsmall" />

            <TextView
                android:id="@+id/tv_report_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_border_size_lsmall"
                android:text=""
                android:textColor="@color/font_dark_gray"
                android:textSize="@dimen/dimen_font_size_small" />

            <TextView
                android:id="@+id/tv_report_create_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_border_size_lsmall"
                android:text=""
                android:textColor="@color/font_dark_gray"
                android:textSize="@dimen/dimen_font_size_small" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>