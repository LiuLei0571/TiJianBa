<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlyt_dialog_share_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_black" >

    <LinearLayout
        android:id="@+id/llyt_dialog_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlyt_dialog_share_btn"
        android:background="@drawable/background_share"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_share_mm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_border_size_xnormal"
            android:drawableTop="@drawable/ic_moments"
            android:gravity="center"
            android:text="@string/str_moments"
            android:textSize="@dimen/dimen_font_size_xnormal" />

        <TextView
            android:id="@+id/tv_share_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_border_size_xnormal"
            android:drawableTop="@drawable/ic_wechat"
            android:gravity="center"
            android:text="@string/str_wechat"
            android:textSize="@dimen/dimen_font_size_xnormal" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlyt_dialog_share_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/org_background_grey"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dimen_border_size_xnormal"
        android:paddingTop="@dimen/dimen_border_size_xnormal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_cancel_share" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_font_size_xnormal" />
    </RelativeLayout>

</RelativeLayout>