<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context="${relativePackage}.${activityClass}" >

  <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/org_background_grey"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/dimen_border_size_xnormal"
        android:paddingTop="@dimen/dimen_border_size_xnormal"
        android:text="@string/str_today_task"
        android:textColor="@color/org_dark_gray"
        android:textSize="@dimen/dimen_font_size_xnormal" />

 <LinearLayout
     android:layout_marginTop="@dimen/indicator_corner_radius" 
      android:layout_marginBottom="@dimen/indicator_corner_radius" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
     >
<ImageView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/health_management_calendarview"
    android:layout_gravity="center_vertical"
    />
     <TextView
         android:id="@+id/tv_today_date"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="4月27号"
         android:layout_marginLeft="@dimen/dimen_border_size_xnormal"
          android:layout_gravity="center_vertical"
          android:textColor="@color/my_report_text"
         android:textSize="@dimen/dimen_font_size_lsmall" />

     <TextView 
         android:layout_marginLeft="@dimen/dimen_border_size_xnormal"
        android:id="@+id/tv_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_today"
        android:textColor="@color/my_report_text"
         android:layout_gravity="center_vertical"
        android:textSize="@dimen/dimen_font_size_lsmall"
         />
 </LinearLayout>
  
 
 <ListView 
     android:id="@+id/iv_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/background_gray"
        android:dividerHeight="@dimen/dimen_border_size_xsmall"
        android:scrollbars="none"
     />
  
 
 
</LinearLayout>
