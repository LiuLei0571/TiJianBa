<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sub_green"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_border_size_small" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_border_size_lsmall"
        android:paddingTop="@dimen/dimen_border_size_lsmall" >

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="快乐宝贝儿童体检套餐"
            android:textColor="@color/org_dark_gray"
            android:textSize="@dimen/dimen_font_size_normal" />

        <TextView
            android:id="@+id/tv_tester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_border_size_small"
            android:drawableLeft="@drawable/ic_person_even"
            android:drawablePadding="@dimen/dimen_border_size_small"
            android:gravity="center_vertical"
            android:text="马枪枪"
            android:textColor="@color/cart_grey"
            android:textSize="@dimen/dimen_font_size_xnormal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_border_size_small"
            android:layout_marginTop="@dimen/dimen_border_size_small"
            android:background="@drawable/seperate" />

        <TextView
            android:id="@+id/tv_org_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_even"
            android:drawablePadding="@dimen/dimen_border_size_small"
            android:gravity="center_vertical"
            android:text="杭州爱康国宾体检中心（文辉店）"
            android:textColor="@color/cart_grey"
            android:textSize="@dimen/dimen_font_size_lsmall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_border_size_xlarge"
                android:textColor="@color/cart_grey"
                android:textSize="@dimen/dimen_font_size_lsmall" />

            <TextView
                android:id="@+id/tv_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_border_size_xlarge"
                android:textColor="@color/cart_grey"
                android:textSize="@dimen/dimen_font_size_lsmall" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_border_size_small"
            android:background="@drawable/seperate" />
    </LinearLayout>

</LinearLayout>