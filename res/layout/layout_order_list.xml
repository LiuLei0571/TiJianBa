                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/indicator_right_padding"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/indicator_right_padding" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/str_pay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_font_size_lsmall" />
            </RelativeLayout>
            -->
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>