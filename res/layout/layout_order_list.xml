<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_background_grey"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_border_size_xnormal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_order"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rlyt_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/dimen_border_size_order"
                android:paddingTop="@dimen/indicator_right_padding"
                android:text="@string/str_order_no"
                android:textColor="@color/cart_grey"
                android:textSize="@dimen/dimen_font_size_small" />

            <TextView
                android:id="@+id/tv_order_nummber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_order_num"
                android:paddingBottom="@dimen/dimen_border_size_order"
                android:paddingTop="@dimen/indicator_right_padding"
                android:textColor="@color/org_detail_orange"
                android:textSize="@dimen/dimen_font_size_lsmall" />

            <TextView
                android:id="@+id/tv_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/indicator_internal_padding"
                android:textColor="@color/cart_grey"
                android:textSize="@dimen/dimen_font_size_small" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_order_seperate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line_order" />

        <LinearLayout
            android:id="@+id/llyt_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_order_ways"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="@string/str_pay_way"
                android:textColor="@color/num_grey"
                android:textSize="@dimen/dimen_font_size_small" />

            <TextView
                android:id="@+id/tv_order_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/tv_order_ways"
                android:textSize="@dimen/dimen_font_size_small" />

            <RelativeLayout
                android:id="@+id/rl_cancel_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/indicator_right_padding"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/indicator_right_padding" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_cancel_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/str_cancel_order"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_font_size_lsmall" />
            </RelativeLayout>
